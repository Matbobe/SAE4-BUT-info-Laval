    <main class="adminMain" id="adminAnnoncePage">
      <div id="headerAnnonce">
        <h1>Annonces</h1>
        <button class="addAnnonceBtn" onclick="addAnnonce()">
          Ajouter une annonce
        </button>
      </div>
      <div id="annonceContainer">
        <textarea id="addAnnonceContainer" class="hidden"></textarea>

        <div id="annonceList">
          <% annonces.forEach((annonce) => { %>
          <div class="annonce" id="annonce<%= annonce.id %>">
            <p id="content<%= annonce.id %>"></p>
            <script>
              document.getElementById("content<%= annonce.id %>").innerHTML =
              "<%= annonce.created_at.toLocaleDateString('fr-FR', {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit'}) %>" + 
                marked.parse(`<%= annonce.content %>`);
            </script>
            <button class="editBtn" onclick="editAnnonce(<%= annonce.id %>)">
              Modifier
            </button>
            <button
              class="deleteBtn"
              onclick="deleteAnnonce(<%= annonce.id %>)"
            >
              Supprimer
            </button>

            <textarea id="editAnnonceContainer<%= annonce.id %>" class="hidden">
<%= annonce.content %></textarea
            >
          </div>
          <% }) %>
        </div>

        <!-- <div class="annonceList">
          <div class="annonce">
            <h2>Titre de l'annonce</h2>
            <p>Contenu de l'annonce</p>
