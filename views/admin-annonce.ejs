  <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
  <script>
    var simplemde = null;
    const addAnnonceContainer = document.getElementById("addAnnonceContainer");
    const addAnnonce = () => {
      if (simplemde) {
        const currentElement = simplemde.element;
        currentElement.classList.add("hidden");
        simplemde.toTextArea();
        simplemde = null;
      }
      addAnnonceContainer.classList.remove("hidden");
      simplemde = new SimpleMDE({
        element: addAnnonceContainer,
        initialValue: "## Titre de l'annonce\n\nContenu de l'annonce",
        placeholder: "Contenu de l'annonce",
        toolbar: [
          "bold",
          "italic",
          "strikethrough",
          "heading",
          "|",
          "code",
          "quote",
          "unordered-list",
          "ordered-list",
          "|",
          "link",
          "image",
          "|",
          "preview",
          "side-by-side",
          "fullscreen",
          "|",
          "guide",
          {
            name: "cancel",
            action: cancelMarkdown,
            className: "fa fa-times textEditorRightBtn2",
            title: "Annuler",
          },
          {
            name: "save",
            action: saveAnnonce,
            className: "fa fa-save textEditorRightBtn1",
            title: "Sauvegarder",
          },
        ],
      });
    };
    const cancelMarkdown = () => {
      if (simplemde) {
        simplemde.toTextArea();
        simplemde = null;
      }
      addAnnonceContainer.classList.add("hidden");
    };
    const saveAnnonce = () => {
      const content = simplemde.value();
      console.log(content);
      fetch("/api/annonce/create", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ content }),
      })
        .then((res) => {
          if (res.status === 200) {
            window.location.reload(true);
          } else {
            console.log("Erreur lors de la création de l'annonce");
          }
        })
        .catch((err) => {
          console.log(err);
        });
    };

    const editAnnonce = (id) => {
      const editAnnonceContainer = document.getElementById(
        `editAnnonceContainer${id}`
      );
      editAnnonceContainer.classList.remove("hidden");
      if (simplemde) {
        const currentElement = simplemde.element;
        currentElement.classList.add("hidden");
        simplemde.toTextArea();
        simplemde = null;
      }
      simplemde = new SimpleMDE({
        element: editAnnonceContainer,
        placeholder: "Contenu de l'annonce",
        toolbar: [
          "bold",
          "italic",
          "strikethrough",
          "heading",
          "|",
          "code",
          "quote",
          "unordered-list",
          "ordered-list",
          "|",
          "link",
          "image",
          "|",
          "preview",
          "side-by-side",
          "fullscreen",
          "|",
          "guide",
          {
            name: "cancel",
            action: () => cancelEditAnnonce(id),
            className: "fa fa-times textEditorRightBtn2",
            title: "Annuler",
          },
          {
            name: "save",
            action: () => saveEditAnnonce(id),
            className: "fa fa-save textEditorRightBtn1",
            title: "Sauvegarder",
          },
        ],
      });
    };
    const cancelEditAnnonce = (id) => {
      const editAnnonceContainer = document.getElementById(
        `editAnnonceContainer${id}`
      );
      editAnnonceContainer.classList.add("hidden");
      if (simplemde) {
        simplemde.toTextArea();
        simplemde = null;
      }
    };

    const saveEditAnnonce = (id) => {
      const content = simplemde.value();
      fetch("/api/annonce/edit", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ id, content }),
      })
        .then((res) => {
          if (res.status === 200) {
            window.location.reload(true);
          } else {
            console.log("Erreur lors de la modification de l'annonce");
          }
        })
        .catch((err) => {
          console.log(err);
        });
    };

    const deleteAnnonce = (id) => {
      fetch("/api/annonce/delete", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ id }),
      })
        .then((res) => {
          if (res.status === 200) {
            window.location.reload(true);
          } else {
            console.log("Erreur lors de la suppression de l'annonce");
          }
        })
        .catch((err) => {
          console.log(err);
        });
    };
  </script>
